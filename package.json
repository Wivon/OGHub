{
  "name": "og-hub",
  "productName": "OG Hub",
  "version": "0.0.4",
  "description": "An outgoing hub to free up space in the taskbar",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "build": {
    "appId": "og-hub",
    "win": {
      "icon": "src/img/logoX512.ico"
    },
    "nsis": {
      "installerIcon": "src/img/setup_logoX512.ico",
      "uninstallerIcon": "src/img/uninstall_logoX512.ico",
      "uninstallDisplayName": "uninstall OG Hub",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "hub"
  ],
  "author": "Wivon Hub",
  "repository": {
    "type": "git",
    "url": "https://github.com/Wivon/OGHub.git"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7"
  },
  "dependencies": {
    "electron-updater": "^4.3.9"
  }
}